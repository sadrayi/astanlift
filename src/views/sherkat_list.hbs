<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        {{#if message}}
            <div class="alert {{message.kind}} fade in">
                <strong>  {{message.content}}</strong>
            </div>
        {{/if}}
                    <div class="x_content">

<div class="row">
    <div class="col-sm-12">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
               cellspacing="0" width="100%">                                           <thead>
                            <tr>
                                <th > نام شرکت</th>
                                <th>نام مدیر</th>
                                <th >شماره ثبت شرکت</th>
                                <th >شماره تماس شرکت</th>
                                <th >نوع اشتراک</th>
                                <th >تاریخ اتمام اشتراک</th>
                                <th >عملیات</th>

                            </tr>
                            </thead>
                            <tbody>
                            {{#each sherkatlist}}
                            <tr>
                                <td>{{this.sherkatname}}</td>
                                <td>{{this.modirname}}</td>
                                <td>{{this.sabtno}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.eshteraktype}}</td>
                                {{#if this.eshterakend}}
                                <td>{{this.eshterakend}}</td>
                                {{else}}
                                    <td>اشتراک فعالی ندارد</td>
                                {{/if}}
                                <td class="nowrap">
                                    <a href="sherkat_add?shid={{this.sabtno}}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> ویرایش </a>
                                </td>
                            </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                    </div>

                    </div>
                    </div>
